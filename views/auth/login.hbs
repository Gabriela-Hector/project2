<div class="row justify-content-center">
    <div class="col-md-6">

        <h3>Inicio de sesión</h3>

        <form action="/login" method="POST">
            <div class="form-group">
                <input name="username" type="text" class="form-control" id="field3" placeholder="Nombre de usuario">
            </div>
            <div class="form-group">
                <input name="password" type="password" class="form-control" id="field2" placeholder="Contraseña">
            </div>
            <button type="submit" class="myButton-dos">Iniciar sesión</button>
            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>

        <div id="goback-button">
            <button onclick="history.back(-1)" class="myButton-tres">Volver</button>
            <script>
                function goBack() {
                    window.history.back();
                }
            </script>
        </div>

    </div>
</div>