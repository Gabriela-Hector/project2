<div class="row justify-content-center">
    <div class="col-md-6 intento">
        <h3>Gracias por tu ayuda, {{user.username}}</h3>
        <style>
            #map {
                width: 100%;
                height: 250px;

            }
        </style>

        <section>
            {{#each user.knowledge}}
            <span class="knowledge-field">{{this}}</span>
            {{/each}}
        </section>

        <section>
            <figure id="map"></figure>
        </section>

        <div class="container">
            <div class="glide">
                <div class="glide__track" data-glide-el="track">
                    <ul class="glide__slides">
                        {{#each collaborations}}
                        <li class="glide__slide">
                            <div class="peticion">
                                <p>Petición: {{collaborationType}}</p>
                                <p>Teléfono: {{telephoneNumber}}</p>
                                <p>Status: {{status}}</p>
                                <p> <a href="/{{_id}}/details">Ver más detalles</a></p>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="glide__arrows" data-glide-el="controls">
                    <button class="glide__arrow glide__arrow--left" data-glide-dir="<">prev</button>
                    <button class="glide__arrow glide__arrow--right" data-glide-dir=">">next</button>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
<script>
    const config = {
        type: "carousel",
        perView: 3,
        breakpoints: {
            600: {
                perView: 2
            }
        }
    }

    new Glide(".glide", config).mount();
</script>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/javascripts/help/help.map.js"></script>
<script src="/javascripts/help/directions.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key={{mapsApiKey}}&libraries=places&callback=initMap"></script>