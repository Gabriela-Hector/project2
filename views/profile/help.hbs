<div class="row justify-content-center">
    <div class="col-md-6 intento">
        <h4>Gracias por tu ayuda, {{user.username}}</h4>
        <style>
            #map {
                width: 100%;
                height: 250px;
            }
        </style>

        <section class="knowledge-section">
            {{#each user.knowledge}}
            <span class="knowledge-field">{{this}}</span>
            {{/each}}
        </section>

        <section id="help-map">
            <figure id="map"></figure>
        </section>

        <div class="container">
            {{#if collaborations}}
            <div class="glide">
                <div class="glide__track" data-glide-el="track">
                    <ul class="glide__slides">
                        {{#each collaborations}}
                        <li class="glide__slide">
                            <div class="peticion">
                                <p class="help-petition">
                                    <span class="help-collab">{{collaborationType}}</span>
                                </p>
                                <p>
                                    <span>Usuario: {{creatorId.username}}</span>
                                </p>
                                <div>
                                    <audio src="{{audioDescription}}" class="audio-player" controls></audio>
                                </div>
                                <a class="link-collab" href="/{{_id}}/details">MÃ¡s detalles</a>
                            </div>
                        </li>
                        {{/each}}

                    </ul>
                </div>
                <div class="glide__arrows" data-glide-el="controls">
                    <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><img class="arrow-size"
                            src="/images/arrows/025-left-arrow-2.png" alt=""></button>
                    <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><img class="arrow-size"
                            src="/images/arrows/017-right-arrow-2.png" alt=""></button>
                </div>
            </div>
            {{/if}}
        </div>
        <div id="goback-button">
            <button onclick="history.back(-1)" class="myButton-tres">Volver</button>
            <script>
                function goBack() {
                    window.history.back();
                }
            </script>
        </div>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
<script>
    const config = {
        type: "carousel",
        perView: 3,
        breakpoints: {
            600: {
                perView: 1
            }
        }
    }

    new Glide(".glide", config).mount();
</script>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/javascripts/help/help.map.js"></script>
<script src="/javascripts/help/directions.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key={{mapsApiKey}}&libraries=places&callback=initMap"></script>